@inproceedings{10.1145/3511808.3557371,
author = {Guo, Shuai and Gu, Yang and Wen, Shijie and Ma, Yuan and Chen, Yiqiang and Wang, Jiwei and Hu, Chunyu},
title = {KiCi: A Knowledge Importance Based Class Incremental Learning Method for Wearable Activity Recognition},
year = {2022},
