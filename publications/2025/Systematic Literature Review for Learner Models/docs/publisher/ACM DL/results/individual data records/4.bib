series = {WSC '22}
}

@inproceedings{10.5555/3586210.3586394,
author = {Greasley, Andrew and Panchal, Gajanan and Samvedi, Avinash},
title = {The Use of Simulation with Machine Learning and Optimization for a Digital Twin- a Case on Formula 1 DSS},
year = {2023},
publisher = {IEEE Press},
abstract = {The implementation of a digital twin presents a challenging environment for simulation. One challenge is the need for fast execution speed to maintain synchronization with the real system. When providing predictive outcomes, the complementary use of simulation with machine learning and optimization software may be employed to achieve this aim. The article investigates the use of simulation, machine learning and optimization in terms of providing a digital twin capability. The article presents a case on Formula1 or F1 competition, where a decision support system (DSS) framework is presented to explore a digital twin capability.},
booktitle = {Proceedings of the Winter Simulation Conference},
pages = {2198–2209},
