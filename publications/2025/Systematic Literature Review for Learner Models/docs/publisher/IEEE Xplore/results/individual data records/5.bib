  booktitle={2021 Global Reliability and Prognostics and Health Management (PHM-Nanjing)}, 
  title={Augmented-Reality-Assisted Bearing Fault Diagnosis in Intelligent Manufacturing Workshop Using Deep Transfer Learning}, 
  year={2021},
  volume={},
  number={},
  pages={1-6},
  abstract={Digital twin is a significant way to realize intelligent manufacturing, and provides important supports for the development of fault diagnosis. In the actual workshop, it is quite difficult to achieve to sufficient data to train a diagnosis model with high reliability, and the test data do not follow the same distribution under different working condition which traditional data-based fault diagnosis rely on. In this paper, we present a digital-twin-assisted bearing fault diagnosis method to solve the difficulty in achieving fault data and training fault diagnosis model under dynamic working condition. Firstly, by relying on the digital twin virtual workshop, massive fault data is provided to train the fault diagnosis model, and transfer this model to the actual workshop to avoid the waste in time and knowledge. An experiment is conducted in an actual machining workshop, which verifies the proposed method.},
  keywords={},
  doi={10.1109/PHM-Nanjing52125.2021.9613117},
  ISSN={},
  month={Oct},}@INPROCEEDINGS{9611123,
  author={Liyana Wan Husain, Wan Nur and Jantan, Azrul Hazri},
  booktitle={2021 International Conference on Electrical Engineering and Informatics (ICEEI)}, 
  title={Adaptive Navigation Design Model for Education Learning System}, 
  year={2021},
  volume={},
  number={},
  pages={1-5},
  abstract={Adaptive user interface (AUI) is an evolving research area that offers personalized user experiences based on user activities. It can be implemented in a variety of ways and one of them is the implementation of Adaptive Navigation technique. Even though several approaches were proposed, there are still limitations and issues in supporting navigation such as complex navigation structure can decrease user&#x0027;s satisfaction. Minimal navigation also can be the potential for users to get lost. The purpose of this study is to determine and analyze the element of adaptive navigation in terms of user model and its baseline which are required to improve existing adaptive navigation model in order to enhance AUI. Results of the study would include the suitable design adaptive navigation model which how they affect the user experience despite their increasingly common use. This is to understand user&#x0027;s preferences, abilities, needs, interests, and knowledge by providing navigation that are most relevant to the user in an effort to shape the user&#x0027;s cognitive load. The results are expected to lead towards comprehensive adaptive navigation model-based, which will be more competent, concise and satisfaction to user.},
  keywords={},
  doi={10.1109/ICEEI52609.2021.9611123},
  ISSN={2155-6830},
  month={Oct},}@INPROCEEDINGS{9610596,
  author={Guo, Chang},
