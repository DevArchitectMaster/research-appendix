  author={Lima, Fábio and Nonogaki, Lucas K. B. Y. and Chang, João and Massote, Alexandre Augusto},
  booktitle={2022 Portland International Conference on Management of Engineering and Technology (PICMET)}, 
  title={Estimation of Energy Consumption in Manufacturing Lines Using Machine Learning into Industry 4.0 Context}, 
  year={2022},
  volume={},
