  ISSN={1941-0131},
  month={Jan},}@INPROCEEDINGS{7519230,
  author={Ishak, Mohd Khairulanwar and Ahmad, Nor Bahiah},
  booktitle={2016 Fifth ICT International Student Project Conference (ICT-ISPC)}, 
  title={Enhancement of Learning Management System with adaptive features}, 
  year={2016},
  volume={},
  number={},
  pages={37-40},
  abstract={Learning Management System (LMS) has been used widely in many institutions to implement e-learning. This is due to the flexibility of LMS to deliver the learning materials in various ways and approaches. However, the heterogeneous of students' behavior, the diversity of learning materials and the complexity of hyperlink for navigation are the main factors of limitation in LMS and can caused cognitive overload among students. Many literatures show that, providing an e-learning system that considers student preferences and needs can improve student performances and understanding. Therefore, this research proposed a new framework to enhance LMS to support adaptive features. The proposed enhancement of LMS is implemented in Moodle platform which includes major adaptation features based on visual and verbal dimension of Felder-Silverman Learning Style Model (FSLSM) and the student's knowledge level. The enhanced framework is organized into three models; domain model, student model and adaptive model that need to interact together to perform adaptively in presenting the learning materials. Three multi-agent components have been added to the Moodle platform to implement the adaptation. The current Moodle repository has also been modified by creating additional fields that are necessary for adaptation.},
